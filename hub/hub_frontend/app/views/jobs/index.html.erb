<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Repo</th>
    <th>Commit</th>
    <th>Started</th>
    <th>Finished</th>
    <th>Worker</th>
    <th>Running</th>
    <th>Success</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.repo %></td>
    <td><%= job.commit %></td>
    <td><%= job.started %></td>
    <td><%= job.finished %></td>
    <td><%= job.worker %></td>
    <td><%= job.running %></td>
    <td><%= job.success %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

