<h1>Listing metals</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Uuid</th>
    <th>Last seen at</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @metals.each do |metal| %>
  <tr>
    <td><%= metal.name %></td>
    <td><%= metal.uuid %></td>
    <td><%= metal.last_seen_at %></td>
    <td><%= metal.state %></td>
    <td><%= link_to 'Show', metal %></td>
    <td><%= link_to 'Destroy', metal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

